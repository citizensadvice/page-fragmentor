{
  "name": "@citizensadvice/page-fragmenter",
  "version": "2.0.0-alpha.8",
  "description": "Split a HTML page into printable pages",
  "scripts": {
    "test": "playwright test && node --test src/**/*.test.js",
    "prebuild": "rm -rf .gh-pages",
    "build": "parcel build test/index.html",
    "cache:clear": "rm -rf .parcel-cache",
    "format": "prettier . --write",
    "lint:format": "prettier . --check",
    "lint:js": "eslint",
    "lint:css": "stylelint **/*.css",
    "lint": "npm run lint:format && npm run lint:js && npm run lint:css",
    "start": "npm run cache:clear && parcel test/index.html",
    "deploy": "npm run build -- --no-cache --public-url \"/page-fragmentor/\" && gh-pages -d .gh-pages",
    "preversion": "npm run lint",
    "postpublish": "npm run deploy",
    "release": "npx np --any-branch"
  },
  "author": "Daniel Lewis",
  "license": "ISC",
  "type": "module",
  "files": [
    "styles/**/*",
    "src/**/*"
  ],
  "exports": {
    ".": "./src/index.js",
    "./auto": "./src/auto.js",
    "./styles.css": "./styles/styles.css"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.3.0",
    "gh-pages": "^6.3.0",
    "parcel": "^2.16.1",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.26.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "prettier": {
    "singleAttributePerLine": true,
    "singleQuote": true
  },
  "targets": {
    "main": false,
    "default": {
      "distDir": ".gh-pages"
    }
  },
  "np": {
    "yarn": false
  }
}
